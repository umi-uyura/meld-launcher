{
  "name": "meld-launcher",
  "version": "0.0.1",
  "description": "Select target by drag & drop and launch Meld",
  "main": "index.html",
  "scripts": {
    "start": "nw",
    "browserify": "browserify build/index.js -o build/bundle.js",
    "reactify": "browserify -t reactify src/jsx/index.jsx -o build/bundle.js",
    "watchify": "watchify -t reactify src/jsx/index.jsx -o build/bundle.js -v",
    "lessc": "lessc src/style/bundle.less build/bundle.css",
    "package": "nwbuild -p osx64 -v 0.12.0 .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "meld",
    "diff",
    "react",
    "nw.js",
    "node-webkit"
  ],
  "author": "Umi Uyura",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.1.1",
    "less": "^2.5.1",
    "material-ui": "^0.7.5",
    "nw": "^0.12.2",
    "react": "^0.13.3",
    "react-loading": "0.0.6",
    "react-tap-event-plugin": "^0.1.7"
  },
  "devDependencies": {
    "browserify": "^10.2.1",
    "node-webkit-builder": "^1.0.11",
    "reactify": "^1.1.1",
    "watchify": "^3.2.1"
  },
  "window": {
    "title": "Meld Launcher",
    "toolbar": false,
    "width": 600,
    "height": 480
  }
}
